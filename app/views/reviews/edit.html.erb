<h2>Edit Review</h2>
<%= form_tag "/reviews/#{@review.id}", method: :patch do %>
  <%= label_tag :title %>:<br>
  <%= text_field_tag :title %><br>

  <%= label_tag :content %>:<br>
  <%= text_field_tag :content %><br>

  <%= label_tag :rating %>:<br>
  <%= number_field_tag :rating %><br>

  <%= submit_tag 'Update Review' %>
<% end %>
