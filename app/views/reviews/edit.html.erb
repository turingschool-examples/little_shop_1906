<h1>Edit Review</h1>
<center>
  <%= form_tag "/items/#{@item_id}/#{@review.id}", method: :patch, class:"form" do %>
    <%= label_tag :title %>
    <%= text_field_tag :title, "#{@review.title}"%>

    <%= label_tag :content %>
    <%= text_field_tag :content, "#{@review.content}" %>

    <%= label_tag "Rating (Must be between 1 and 5)" %>
    <%= text_field_tag :rating, "#{@review.rating}" %>

    <%= submit_tag 'Update Review', class:'submit-form' %>
  <% end %>
</center>
