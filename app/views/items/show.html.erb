<h1><%= @item.name %></h1>
<p align="center">Sold by: <%=link_to @item.merchant.name, "/merchants/#{@item.merchant.id}" %> </p>
<section class = "item-show-box">
  <div class="show-box-header">
    <span class="item-details-header">Item Details</span>
    <span>
      <%= link_to "Edit Item", "/items/#{@item.id}/edit", class: "edit-btn" %>
      <% unless @item.has_orders? %>
        <%= link_to "Delete Item", "/items/#{@item.id}", method: :delete, class: "delete-btn" %>
      <% end %>
    </span>
  </div>
  <section class = "item-show-item">
    <img src= <%= @item.image %> class="item-show-img">
    <div class = "item-show-details">
      <p><%= @item.description %></p>
      <p>Price: $<%= @item.price %> </p>
      <p>Inventory: <%= @item.inventory %> </p>
      <% if @item.active? %>
      <p style= "color:green">Active</p>
      <% else %>
      <p style= "color:red">Inactive</p>
      <% end %>
      <%= link_to 'Add to Cart', "/cart/#{@item.id}", method: :patch, class: "regular-button", id: "add-to-cart" %>
    </div>
  </section>
  <section class="reviews-section">
    <div class="reviews-section-header">
      <span class="reviews-title">Customer Reviews</span>
      <div class="dropdown">
        <button class="dropbtn">Sort By</button>
        <div class="dropdown-content">
          <%= link_to 'Rating: High - Low', "?sort=max-rating" %>
          <%= link_to 'Rating: Low - High', "?sort=min-rating" %>
        </div>
      </div>
      <%= link_to "New Review", "/items/#{@item.id}/reviews/new", class: "reviews-header-btn" %>
    </div>
    <% unless @item.reviews.count <= 3 %>
      <section class="reviews-stats">
        <h3 id="avg-rating">
          <%= "Average Rating: #{@average.round(2)}" %>
        </h3>
        <section class="top-bottom-reviews">
          <section id="top-three">
            <h4>Top Three Reviews</h4>
            <% @top.each do |review| %>
              <ul>
                <li><%= "#{review.title} (#{review.rating}/5)" %></li>
              </ul>
            <% end %>
          </section>
          <section id="bottom-three">
            <h4>Bottom Three Reviews</h4>
            <% @bottom.each do |review| %>
              <ul>
                <li><%= "#{review.title} (#{review.rating}/5)" %></li>
              </ul>
            <% end %>
          </section>
        </section>
      </section>
    <% end %>
    <% @item.reviews.each do |review| %>
      <section id="review-<%= review.id %>">
        <h4><%= review.title %></h4>
        <p><%= review.content %></p>
        <p>Rating: <%= review.rating %></p>
        <div>
          <%= link_to "Edit", "/reviews/#{review.id}/edit", class: "edit-btn"%>
          <%= link_to "Delete", "/reviews/#{review.id}", method: :delete, class: 'delete-btn'%>
        </div>
      </section>
    <% end %>
  </section>
</section>
