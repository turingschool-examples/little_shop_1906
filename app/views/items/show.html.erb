<h1><%= @item.name %></h1>
<p align="center">Sold by: <%=link_to @item.merchant.name, "/merchants/#{@item.merchant.id}" %> </p>
<center>
  <section class = "item-show-grid">
    <section class = "item-show-item">
      <img src= <%= @item.image %>>
    </section>
    <section style="text-align:left" class = "item-show-item">
      <p><%= @item.description %></p>
      <p>Price: $<%= @item.price %> </p>
      <p>Inventory: <%= @item.inventory %> </p>
      <% if @item.active? %>
        <p style= "color:green">Active</p>
      <% else %>
        <p style= "color:red">Inactive</p>
      <% end %>
      <p><%= link_to "Edit Item", "/items/#{@item.id}/edit" %></p>
      <p><%= link_to "Delete Item", "/items/#{@item.id}", method: :delete %></p>
    </section>
  </section>
</center>
<footer>
  <section id= "review-grid">
    <section id= "top-reviews">
      <h1>Top Reviews: </h1>
      <% Review.top_rated.each do |review| %>
        <section id="top-review<%=review.id%>">
          <p><%=review.title%> : <%=review.rating%></p>
          </section>
          <% end %>
        </section>
        <section id = "low-reviews">
          <h1>Lowest Reviews: </h1>
          <% Review.bottom_rated.each do |review| %>
          <section id="low-review<%=review.id%>">
            <p><%=review.title%> : <%=review.rating%></p>
        </section>
        <% end %>
      </section>
      <section id="average-reviews">
        <h1>Average Review Rating: <%= Review.average_rating %></h1>
      </section>
      <section id="new-review">
      <%= link_to 'Add New Review', "/items/#{@item.id}/reviews/new" %>
    </section>
    <% @item.reviews.each do |review| %>
      <section id= "review-<%=review.id%>">
        <h2><%= review.title %></h2>
        <h3>Rating: <%= review.rating %></h3>
        <p><%= review.content %></p>
      </section>
      <% end %>
  </section>
</footer>
