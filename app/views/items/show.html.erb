<h1><%= @item.name %></h1>
<p align="center">Sold by: <%=link_to @item.merchant.name, "/merchants/#{@item.merchant.id}" %> </p>
<center>
  <section class = "item-show-grid">
    <section class = "item-show-item">
      <img src= <%= @item.image %>>
    </section>
    <section style="text-align:left" class = "item-show-item">
      <p><%= @item.description %></p>
      <p>Price: $<%= @item.price %> </p>
      <p>Inventory: <%= @item.inventory %> </p>
      <% if @item.active? %>
        <p style= "color:green">Active</p>
      <% else %>
        <p style= "color:red">Inactive</p>
      <% end %>
      <p><%= link_to "Edit Item", "/items/#{@item.id}/edit" %></p>
      <p><%= link_to "Delete Item", "/items/#{@item.id}", method: :delete %></p>
    </section>
    <section class="reviews-section">
      <p><%= link_to "New Review", "/items/#{@item.id}/reviews/new" %></p>
      <section class="reviews-stats">
        <section id="avg-rating">

        </section>
        <section id="top-three">
          <% @top.each do |review| %>
            <p><%= "Title: #{review.title} Rating: #{review.rating}" %></p>
          <% end %>
        </section>
        <section id="bottom-three">
          <% @bottom.each do |review| %>
          <p><%= "Title: #{review.title} Rating: #{review.rating}" %></p>
          <% end %>
        </section>
      </section>
      <% @item.reviews.each do |review| %>
        <section id="review-<%= review.id %>">
          <h5><%= review.title %></h5>
          <p><%= review.content %></p>
          <p>Rating: <%= review.rating %></p>
          <p><%= link_to "Edit", "/reviews/#{review.id}/edit" %></p>
          <p><%= link_to "Delete", "/reviews/#{review.id}", method: :delete%></p>
        </section>
      <% end %>
    </section>
  </section>
</center>
