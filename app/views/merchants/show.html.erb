<h1><%= @merchant.name %></h1>
<p class="address"><%= @merchant.address %></p>
<p class="address"><%= @merchant.city %>, <%= @merchant.state %> <%= @merchant.zip %></p>

<ul><%= link_to "All #{@merchant.name} Items", "/merchants/#{@merchant.id}/items" %></ul>
<ul><%= link_to "Update Merchant", "/merchants/#{@merchant.id}/edit" %></ul>
<% if @merchant.has_order == false %>
  <ul><%= link_to "Delete Merchant", "/merchants/#{@merchant.id}", method: :delete %></ul>
<% end %>
<section id="merchant-stats">
<center>
  <h2> <%= @merchant.name %> Statistics:</h2>
  <table class ="merchant-stats-table">
    <th>Total Items:</th>
    <td><%= @merchant.items_count %></td>
  </table
</center>
<% if @merchant.has_order %>
  <center>
    <table class="merchant-stats-table">
      <th>Average Item Price:</th>
      <td>$<%= @merchant.average_item_price.round(1) %></td>
    </table>
    <table class="merchant-stats-table">
    <th>Orders shipped to:</th>
    <% @merchant.distinct_cities.each do |city| %>
      <td><%= city %></td>
    <% end %>
  </table>
  </center>
</section>
<% end %>
